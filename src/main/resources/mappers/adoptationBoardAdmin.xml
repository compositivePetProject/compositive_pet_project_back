<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.pet.repository.admin.AdoptationBoardAdminMapper">

    <resultMap id="AdoptationBoardAdminResultMap" type="com.project.pet.entity.adoptationBoard.AdoptationBoardAdmin">
        <id property="adoptationBoardAdminId" column="adoptation_admin_board_id"></id>
        <result property="userId" column="user_id"/>
        <result property="adoptationBoardAdminTitle" column="adoptation_admin_board_title"/>
        <result property="adoptationBoardAdminContent" column="adoptation_admin_board_content"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
        <association property="user" resultMap="UserResultMap"/>
    </resultMap>

    <resultMap id="UserResultMap" type="com.project.pet.entity.user.User">
        <id property="userId" column="user_id"/>
        <result property="username" column="user_username"/>
        <result property="password" column="user_password"/>
        <result property="name" column="user_name"/>
        <result property="address" column="user_address"/>
        <result property="telNumber" column="user_address"/>
        <result property="nickname" column="user_address"/>
        <result property="email" column="user_address"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <insert id="postAdoptationBoardAdmin"
            parameterType="com.project.pet.entity.adoptationBoard.AdoptationBoardAdmin">
        insert into
            adoptation_board_admin_tb
        values
            (0, #{userId}, #{adoptationBoardAdminTitle}, #{adoptationBoardAdminContent}, now(),now())
    </insert>

    <select id="getAdoptationBoardAdminByNoticeId"
            parameterType="integer"
            resultMap="AdoptationBoardAdminResultMap">
        select
            abat.adoptation_admin_board_id,
            abat.user_id,
            ut.user_username,
            abat.adoptation_admin_board_title,
            abat.adoptation_admin_board_content,
            abat.create_date,
            abat.update_date
        from
            adoptation_board_admin_tb abat
        left outer join
            user_tb ut on (ut.user_id = abat.user_id)
        where
            adoptation_admin_board_id = #{noticeId}
    </select>

    <select id="getAdoptationBoardAdmins"
            parameterType="integer"
            resultMap="AdoptationBoardAdminResultMap">
        select
            abat.adoptation_admin_board_id,
            abat.user_id,
            ut.user_username,
            abat.adoptation_admin_board_title,
            abat.adoptation_admin_board_content,
            abat.create_date,
            abat.update_date
        from
            adoptation_board_admin_tb abat
        left outer join
            user_tb ut on (ut.user_id = abat.user_id)
    </select>

    <delete id="deleteAdoptationBoardAdminByNoticeId"
            parameterType="integer">
        delete from
            adoptation_board_admin_tb
        where
            adoptation_admin_board_id = #{noticeId}
    </delete>

    <update id="updateAdoptationBoardAdmin"
            parameterType="com.project.pet.entity.adoptationBoard.AdoptationBoardAdmin">
        update
            adoptation_board_admin_tb
        set
            adoptation_admin_board_title = #{adoptationBoardAdminTitle},
            adoptation_admin_board_content = #{adoptationBoardAdminContent},
            update_date = now()

        where
            adoptation_admin_board_id = #{adoptationBoardAdminId}
    </update>

</mapper>
