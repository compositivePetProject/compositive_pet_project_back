<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.pet.repository.CommunityBoardCommentRatingMapper">
    <insert id="saveCommunityBoardCommentRating"
            parameterType="com.project.pet.entity.communityBoard.CommunityBoardCommentRating"
    >
        insert into
            community_board_comment_rating_tb
        values
            (0, #{communityBoardCommentId}, #{userId}, #{communityBoardCommentRatingValue})
    </insert>

    <update id="updateCommunityBoardCommentRating"
            parameterType="com.project.pet.entity.communityBoard.CommunityBoardCommentRating">

        update
            community_board_comment_rating_tb
        set
            community_board_comment_rating_value  = #{communityBoardCommentRatingValue}
        where
            community_board_comment_rating_id = #{communityBoardCommentRatingId}

    </update>

</mapper>