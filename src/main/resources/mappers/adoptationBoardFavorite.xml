    <insert id="saveAdoptationBoardFavorite"
        parameterType="com.project.pet.entity.adoptationBoard.AdoptationBoardFavorite">
        insert into
            community_board_favorite_tb
        values
        (0, #{adoptationBoardId}, #{userId}, now(), now())
