<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.pet.repository.AdoptationBoardFavoriteMapper">
    <resultMap id="Adoptation" type="com.project.pet.entity.adoptationBoard.AdoptationBoardAnimalCategory">
        <id property="boardAnimalCategoryName" column="board_animal_category_id"/>
        <result property="boardAnimalCategoryName" column="board_animal_category_name"/>
        <result property="boardAnimalCategoryNameKor" column="board_animal_category_name_kor"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>
    <insert id="saveAdoptationBoardFavorite"
        parameterType="com.project.pet.entity.adoptationBoard.AdoptationBoardFavorite">
        insert into
            adoptation_board_favorite_tb
        values
        (0, #{adoptationBoardId}, #{userId}, now(), now())
    </insert>
    <delete id="deleteAdoptationBoardFavorite"
            parameterType="integer">
        delete
        from
            adoptation_board_favorite_tb
        where
            user_id = #{userId}
    </delete>

</mapper>