<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.pet.repository.AdoptationBoardViewMapper">

    <insert id="postAdoptationBoardView"
            parameterType="com.project.pet.entity.adoptationBoard.AdoptationBoardView">
        insert into
            adoptation_board_view_tb
        values
        (0,#{adoptationBoardId},#{userId},now(),now())
    </insert>
    <select id="getAdoptationBoardViewCount"
            resultType="integer">
        SELECT
            count(*)
        FROM
            adoptation_board_view_tb
        where
            adoptation_board_id = #{boardId};

    </select>



</mapper>
